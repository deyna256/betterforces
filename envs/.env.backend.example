REDIS_URL=redis://redis:6379/0

DEV_MODE=false

CODEFORCES_API_BASE=https://codeforces.com/api
CODEFORCES_USER_HANDLE=tourist

# Fresh cache TTL - data is considered fresh and served immediately (seconds)
CACHE_FRESH_TTL=14400
# Stale cache TTL - data can be served as stale while revalidating (seconds)
CACHE_STALE_TTL=86400

# Must match WORKER_QUEUE_KEY in .env.worker
WORKER_QUEUE_KEY=fetch_queue

TASK_STATUS_TTL=300
PENDING_TASK_TTL=60

# Rate limiting for BetterForces API (not Codeforces)
RATE_LIMIT_REQUESTS=10000
# second | minute | hour | day
RATE_LIMIT_PERIOD=hour

CORS_ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
